import { NextRequest, NextResponse } from 'next/server';
import { createClient } from '@/lib/supabase/server';

// GET /api/consultations - Retrieve user's consultation sessions
export async function GET(request: NextRequest) {
  try {
    // Initialize Supabase server client for database operations
    const supabase = await createClient();
    
    // Parse query parameters from the request URL
    const { searchParams } = new URL(request.url);
    
    // Extract wallet address from query parameters
    // Note: In production, this should be authenticated via wallet signature
    const walletAddress = searchParams.get('wallet_address');
    
    // Validate wallet address is provided
    if (!walletAddress) {
      return NextResponse.json(
        {
          error: 'Authentication required',
          message: 'Wallet address is required to fetch consultations'
        },
        { status: 401 }
      );
    }
    
    // Validate wallet address format (basic Ethereum address validation)
    if (!/^0x[a-fA-F0-9]{40}$/.test(walletAddress)) {
      return NextResponse.json(
        {
          error: 'Invalid wallet address format',
          message: 'Please provide a valid Ethereum wallet address'
        },
        { status: 400 }
      );
    }
    
    // Parse optional query parameters with default values
    const status = searchParams.get('status');
    const limit = parseInt(searchParams.get('limit') || '20');
    const offset = parseInt(searchParams.get('offset') || '0');
    const sortBy = searchParams.get('sortBy') || 'scheduled_for';
    const sortOrder = searchParams.get('sortOrder') === 'asc' ? true : false;
    
    console.log('üîç Fetching consultations for wallet:', walletAddress, {
      status, limit, offset, sortBy, sortOrder
    });
    
    // Build the base database query
    // Include consultant details via foreign key relationship
    let query = supabase
      .from('consultations')
      .select(`
        *,
        consultant:consultants(
          id,
          name,
          title,
          hourly_rate,
          expertise,
          profile_image_url,
          rating,
          total_reviews
        )
      `, { count: 'exact' }) // Get total count for pagination metadata
      .eq('user_wallet_address', walletAddress);
    
    // Apply status filter if specified and not 'all'
    if (status && status !== 'all') {
      // Validate status is one of the allowed values
      const validStatuses = ['pending_payment', 'confirmed', 'completed', 'cancelled'];
      if (validStatuses.includes(status)) {
        query = query.eq('status', status);
      }
    }
    
    // Apply sorting based on sortBy parameter
    const validSortFields = ['scheduled_for', 'created_at', 'total_price', 'duration_minutes'];
    const sortField = validSortFields.includes(sortBy) ? sortBy : 'scheduled_for';
    query = query.order(sortField, { ascending: sortOrder });
    
    // Apply pagination for large result sets
    const start = offset;
    const end = offset + limit - 1;
    query = query.range(start, end);
    
    // Execute the database query
    const { data: consultations, error, count } = await query;
    
    // Handle database query errors
    if (error) {
      console.error('‚ùå Error fetching consultations:', error);
      return NextResponse.json(
        {
          error: 'Failed to fetch consultations',
          details: error.message,
          code: 'DATABASE_ERROR'
        },
        { status: 500 }
      );
    }
    
    console.log(`‚úÖ Found ${consultations?.length || 0} consultations`);
    
    // Calculate statistics for different consultation statuses
    const stats = {
      total: count || 0,
      pending_payment: 0,
      confirmed: 0,
      completed: 0,
      cancelled: 0,
      upcoming: 0,
      past: 0
    };
    
    // Process consultations to gather statistics
    const now = new Date();
    if (consultations) {
      consultations.forEach(consultation => {
        // Count by status
        if (consultation.status in stats) {
          stats[consultation.status]++;
        }
        
        // Count upcoming vs past consultations
        const scheduledTime = new Date(consultation.scheduled_for);
        if (scheduledTime > now) {
          stats.upcoming++;
        } else {
          stats.past++;
        }
      });
    }
    
    // Calculate pagination metadata
    const totalCount = count || 0;
    const hasMore = totalCount > offset + limit;
    const totalPages = Math.ceil(totalCount / limit);
    const currentPage = Math.floor(offset / limit) + 1;
    
    // Format consultations data for better client consumption
    const formattedConsultations = consultations?.map(consultation => ({
      id: consultation.id,
      consultant_id: consultation.consultant_id,
      consultant: consultation.consultant,
      scheduled_for: consultation.scheduled_for,
      duration_minutes: consultation.duration_minutes,
      status: consultation.status,
      total_price: consultation.total_price,
      currency: consultation.currency,
      topics: consultation.topics,
      notes: consultation.notes,
      timezone: consultation.timezone,
      is_reviewed: consultation.is_reviewed,
      created_at: consultation.created_at,
      updated_at: consultation.updated_at,
      // Calculate derived fields
      is_upcoming: new Date(consultation.scheduled_for) > now,
      end_time: new Date(new Date(consultation.scheduled_for).getTime() + consultation.duration_minutes * 60000).toISOString()
    })) || [];
    
    // Return successful response with data and metadata
    return NextResponse.json({
      success: true,
      message: 'Consultations retrieved successfully',
      data: formattedConsultations,
      meta: {
        wallet_address: walletAddress,
        statistics: stats,
        pagination: {
          total: totalCount,
          limit,
          offset,
          currentPage,
          totalPages,
          hasMore
        },
        filters: {
          status: status || 'all',
          sortBy,
          sortOrder: sortOrder ? 'asc' : 'desc'
        },
        summary: {
          total_amount_spent: formattedConsultations
            .filter(c => c.status === 'completed')
            .reduce((sum, c) => sum + (c.total_price || 0), 0),
          total_hours_booked: formattedConsultations
            .reduce((sum, c) => sum + (c.duration_minutes || 0), 0) / 60
        }
      },
      timestamp: new Date().toISOString()
    });
    
  } catch (error) {
    // Handle unexpected errors
    console.error('‚ùå Unexpected error in GET /api/consultations:', error);
    
    return NextResponse.json(
      {
        error: 'Internal server error',
        message: error instanceof Error ? error.message : 'Unknown error occurred',
        code: 'INTERNAL_ERROR'
      },
      { status: 500 }
    );
  }
}

// Export configuration for this route
export const dynamic = 'force-dynamic'; // Ensure fresh data on each request
export const revalidate = 0; // Disable caching for user-specific data
